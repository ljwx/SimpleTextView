<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.ljwx.view.SplitTextView
                android:id="@+id/stv"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray"
                android:drawablePadding="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="a"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="20dp"
                app:stvCenterColor="@color/purple_700"
                app:stvCenterMarginLeft="10dp"
                app:stvCenterMarginRight="10dp"
                app:stvCenterText="abcd"
                app:stvDrawableLeft="@mipmap/arrow_right_gray"
                app:stvDrawableLeftPadding="10dp"
                app:stvDrawableLeftSize="24dp"
                app:stvDrawableRight="@mipmap/ic_launcher"
                app:stvDrawableRightPadding="10dp"
                app:stvLeftColor="@android:color/holo_blue_dark"
                app:stvLeftText="123456"
                app:stvRightText="中文" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="400dp"
                android:gravity="center"
                android:text="asdfsadf" />

        </LinearLayout>
    </ScrollView>

    <com.ljwx.view.ThreeTextView
        android:id="@+id/three"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/teal_200"
        android:ellipsize="end"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:text="一二三四五六七八九十一二三四五六七八九十"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:tvLeftIcon="@mipmap/ic_launcher"
        app:tvLeftIconPadding="5dp"
        app:tvLeftIconSize="24dp"
        app:tvLeftIconTint="@color/purple_200"
        app:tvRightIcon="@drawable/ic_launcher_background"
        app:tvRightIconPadding="5dp"
        app:tvRightIconSize="12dp"
        app:tvRightIconTint="@color/purple_200"
        app:tvText2="This is text2, This is text2, This is text2, This is description"
        app:tvText2Color="@color/purple_500"
        app:tvText2Padding="20dp"
        app:tvText3="This is text3" />


</androidx.constraintlayout.widget.ConstraintLayout>